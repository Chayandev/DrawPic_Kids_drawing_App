                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/indigo" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/ruby"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/ruby" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/cyan"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/cyan" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/cyber_yellow"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/cyber_yellow" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/Gray"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/Gray" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/honey"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/honey" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/amberYellow"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/amberYellow" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/skin"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/skin" />


            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/white" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/otherBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clrPalatView">

        <ImageButton
            android:id="@+id/undoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/undo" />

        <ImageButton
            android:id="@+id/redoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/redo"/>

        <ImageButton
            android:id="@+id/brushView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/brush" />


        <ImageButton
            android:id="@+id/wipeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/cleaning" />

        <ImageButton
            android:id="@+id/add_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/gallery" />

        <ImageButton
            android:id="@+id/delet_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="more items"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@id/frame"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@color/teal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="save Image"
        android:src="@drawable/baseline_save_24"
        android:visibility="invisible"
        app:backgroundTint="@color/splashBg"
        app:layout_constraintBottom_toTopOf="@id/fab_add"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/shareing"
        android:src="@drawable/baseline_share_24"
        android:visibility="invisible"
        app:backgroundTint="@color/splashBg"
        app:layout_constraintBottom_toTopOf="@id/saveBtn"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>