                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/lime" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/pickle"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/pickle" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/pine"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/pine" />

            <ImageButton
