            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/mauve"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/mauve" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/burgandy"
                android:onClick="paintClickListner"
                android:src="@drawable/palat_normal"
                android:tag="@color/burgandy" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@color/olive"
